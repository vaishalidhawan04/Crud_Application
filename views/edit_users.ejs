<%- include("layout/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-success">
                    <h3 class="text-light">Edit User <%= foundUser.name %></h3>

                </div>
                <div class="card-body">
                    <form action="/update/<%= foundUser._id %>" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" value="<%= foundUser.name %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" value="<%= foundUser.email %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="mobile">Mobile</label>
                            <input type="text" name="mobile" class="form-control form-control-lg" placeholder="Enter contact number" value="<%= foundUser.mobile %>" required>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required>
                            <img src="<%= foundUser.image %>" width="100" class="img-thumbnail mt-1" alt="image">

                        </div>
                        <input type="hidden" name="old_image" value="<%= foundUser.image %>">
                        
                        <div class="mb-3 d-grid">
                            
                            <input type="submit" name="submit" class="btn btn-success btn-lg" value="Update User" required>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>







<%- include("layout/footer.ejs") %>