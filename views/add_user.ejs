<%- include("layout/header.ejs") %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h3 class="text-light">Add New User</h3>

                </div>
                <div class="card-body">
                    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="name">Name</label>
                            <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter name" required>
                        </div>

                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control form-control-lg" placeholder="Enter email" required>
                        </div>

                        <div class="mb-3">
                            <label for="mobile">Mobile</label>
                            <input type="text" name="mobile" class="form-control form-control-lg" placeholder="Enter contact number" required>
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Select Image</label>
                            <input type="file" name="image" class="form-control form-control-lg" required>
                        </div>
                        
                        <div class="mb-3 d-grid">
                            
                            <input type="submit" name="submit" class="btn btn-primary btn-lg" value="Add User" required>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
</div>







<%- include("layout/footer.ejs") %>