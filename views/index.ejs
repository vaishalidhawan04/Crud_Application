<%- include("layout/header.ejs") %>

<div class="container">
    <div class="row my-4">
        <div class="col-lg-12">
            <div class="table-responsive">                                                                                                                                                                                                                                                                                                                                                                                                                                                                                 
                <% if(locals.users){ %>
                    <table class="table table-striped text-center my-2">
                        <thead>
                            <tr class="table-dark">
                                <th>Id</th>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Email Id</th>
                                <th>Mobile</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((row, index) => {%>
                                <tr class="align-middle">
                                <td><%= index %> </td>
                                <td><img src="<%= row.image %>" alt="" width="50" class="img-thumbnail"></img></td>
                                <td> <%= row.name %> </td>
                                <td><%= row.email %></td>
                                <td><%= row.mobile %></td>
                                <td>
                                    <a href="/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                    <a href="/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                <% } else{%>
                    <h1 class="text-center text-secondary mt-5">No users found in the database!</h1>
                <% } %>
                
            </div>
        </div>
    </div>
</div>







<%- include("layout/footer.ejs") %>